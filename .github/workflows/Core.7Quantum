name: Core7Quantum 🚀 Identity Seal Deploy

on:
  push:
    branches:
      - main
  workflow_dispatch:

jobs:
  deploy:
    name: 🔐 Deploy Core7Quantum Seal
    runs-on: ubuntu-latest

    steps:
      - name: ⬇️ Checkout code
        uses: actions/checkout@v3

      - name: 🧠 Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'

      - name: 🔥 Install Firebase CLI
        run: npm install -g firebase-tools

      - name: 🚀 Firebase Deploy – Core7Quantum
        run: firebase deploy --only hosting --project aic-hmv-supreme
        working-directory: ./
